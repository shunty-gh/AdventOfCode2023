    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: AoC2023 Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-dotnet",
            "program": "${workspaceFolder}/cs/bin/Debug/net8.0/aoc2023.dll",
            "args": [],
            "cwd": "${workspaceFolder}/cs",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/py",
            "justMyCode": true
        }
    ]
}